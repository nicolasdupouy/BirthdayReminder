<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicolasdupouy.birthdayreminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_application"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screen.BirthdayReminderMainActivity"
            android:label="@string/app_name_application" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".screen.AddEntryActivity"
            android:label="@string/add_entry_application" >
        </activity>
        <activity
            android:name=".dao.impl.EntryItemDataSourceActivityImpl"
            android:label="@string/EntryItemDataSourceImpl_application" >
        </activity>
    </application>

</manifest>
